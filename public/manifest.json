{
    "name": "chrome拡張機能sample",
    "manifest_version": 3,
    "version": "1.0.0",
    "permissions": ["tabs", "storage"],
    "host_permissions": ["<all_urls>"],

    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },

    "action": {
        "default_title": "sample_popup",
        "default_popup": "action/index.html"
    },

    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["contents.js"]
        }
    ]
}
