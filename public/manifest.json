{
  "name": "chrome拡張機能sample",
  "manifest_version": 3,
  "version": "1.0.0",
  "permissions": ["tabs", "storage"],
  "action": {
    "default_title": "sample_popup",
    "default_popup": "popup.html"
  },

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["http://*", "https://*"],
      "js": ["contents.js"]
    }
  ]
}
